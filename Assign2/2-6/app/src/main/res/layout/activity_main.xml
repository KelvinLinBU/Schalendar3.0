<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="360dp"
        android:layout_height="88dp"
        android:gravity="right"
        android:text = "0.0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/num1"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintRight_toLeftOf="@+id/num2" />

    <Button
        android:id="@+id/num2"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintRight_toLeftOf="@+id/num3"
        android:text="2"/>

    <Button
        android:id="@+id/num3"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:text="3"/>

    <Button
        android:id="@+id/add"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@+id/num3"
        android:text="+"/>
    <Button
        android:id="@+id/time"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toRightOf="@+id/add"
        android:text="*"/>
    <Button
        android:id="@+id/num4"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintRight_toLeftOf="@+id/num5"
        android:text="4" />

    <Button
        android:id="@+id/num5"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintRight_toLeftOf="@+id/num6"
        android:text="5" />

    <Button
        android:id="@+id/num6"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="6"/>

    <Button
        android:id="@+id/minus"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintLeft_toRightOf="@+id/num6"
        android:text="-"/>

    <Button
        android:id="@+id/divide"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintLeft_toRightOf="@+id/minus"
        android:text="/"/>

    <Button
        android:id="@+id/num7"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num4"
        app:layout_constraintRight_toLeftOf="@+id/num8"
        android:text="7" />

    <Button
        android:id="@+id/num8"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num4"
        app:layout_constraintRight_toLeftOf="@+id/num9"
        android:text="8"/>

    <Button
        android:id="@+id/num9"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="9"/>

    <Button
        android:id="@+id/sqrt"
        android:layout_width="144dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num4"
        app:layout_constraintLeft_toRightOf="@+id/num9"
        android:text="sqrt"/>

    <Button
        android:id="@+id/num0"
        android:layout_width="144dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num7"
        app:layout_constraintRight_toLeftOf="@+id/sign"
        android:text="0" />

    <Button
        android:id="@+id/sign"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="."/>

    <Button
        android:id="@+id/equal"
        android:layout_width="144dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num7"
        app:layout_constraintLeft_toRightOf="@+id/sign"
        android:text="="/>

    <Button
        android:id="@+id/clear"
        android:layout_width="370dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@+id/num0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="CLEAR"/>

</androidx.constraintlayout.widget.ConstraintLayout>